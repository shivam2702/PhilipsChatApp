<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Platform.Theme.PhilipsChatApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@color/black30</item>
    </style>
    <style name="Theme.PhilipsChatApp" parent="Platform.Theme.PhilipsChatApp">
        <item name="colorPrimary">@color/blue500</item>
        <item name="colorPrimaryDark">@color/blue800</item>
        <item name="colorAccent">@color/yellow700</item>
    </style>

    <style name="Theme.PhilipsChatApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PhilipsChatApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PhilipsChatApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>